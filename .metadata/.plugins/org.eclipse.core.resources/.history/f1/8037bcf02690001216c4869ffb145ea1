package akkaserver;

import java.io.*;
import java.net.*;

import eventserver.IEventCallbacks;
import edu.buffalo.cse.terminus.messages.*;
import edu.buffalo.cse.terminus.lowlevel.*;

import shared.ATerminusConnection;

public class AkkaConnection extends ATerminusConnection
{
	private Socket socket;
	private DataOutputStream out;
	private IEventCallbacks eventClient;

	public AkkaConnection(Socket s, IEventCallbacks client)
	{
		super();
		this.socket = s;
		this.eventClient = client;

		try
		{
			this.out = new DataOutputStream(s.getOutputStream());
			startReceiveThread();
		}
		catch (IOException e)
		{
			return;
		}
	}

	private void startReceiveThread()
	{
		new Thread(new Runnable()
		{
			@Override
			public void run()
			{
				AkkaReader reader = null;
				
				try
				{
					reader = new AkkaReader(AkkaConnection.this.socket);
				}
				catch (IOException e1)
				{
					AkkaConnection.this.shutdown();
					AkkaConnection.this.eventClient
							.connectionDropped(AkkaConnection.this);
					return;
				}
				
				while (true)
				{
					try
					{
						//TerminusMessage message = AkkaShared.getNextMessage(socket);
						TerminusMessage message = reader.getNextMessage();
						eventClient.messageReceived(AkkaConnection.this, message);
					}
					catch (IOException e)
					{
						AkkaConnection.this.shutdown();
						AkkaConnection.this.eventClient
								.connectionDropped(AkkaConnection.this);
						return;
					}
				}
			}
		}).start();
	}

	@Override
	public void sendMessage(TerminusMessage m)
	{
		try
		{
			IAkkaMessage llm = (IAkkaMessage) m;
			byte[] msg = llm.getBytes();
			if (msg != null)
			{
				out.write(msg);
			}
		}
		catch (IOException e)
		{
			// TODO: Handle error
		}
	}

	@Override
	public void shutdown()
	{
		try
		{
			this.socket.close();
		}
		catch (IOException e)
		{
			// Ignore
		}
	}
}
